// MIXINS

/* placeholder texts
  @usage:
input { 
  @include placeholder {
    color: red;
  }
}

*/
@mixin placeholderstyles {
  &::-webkit-input-placeholder {@content}
  &:-moz-placeholder           {@content}
  &::-moz-placeholder          {@content}
  &:-ms-input-placeholder      {@content}  
}
